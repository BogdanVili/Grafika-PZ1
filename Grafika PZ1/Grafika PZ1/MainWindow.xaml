<Window x:Class="Grafika_PZ1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafika_PZ1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock ="Top">
            <MenuItem Header="Ellipse" Click="EllipseButton_Click"/>
            <MenuItem Header="Rectangle" Click="RectangleButton_Click"/>
            <MenuItem Header="Polygon" Click="PolygonButton_Click"/>
            <MenuItem Header="Image" Click="ImageButton_Click"/>
            <MenuItem Header="Undo"/>
            <MenuItem Header="Redo"/>
            <MenuItem Header="Clear"/>
        </Menu>
        <Canvas Background="White" DockPanel.Dock="Bottom" Name="PaintingCanvas" MouseRightButtonUp="PaintingCanvas_MouseRightButtonUp">
            
        </Canvas>
    </DockPanel>
</Window>
